api.kepler.lan {
	tls /home/ankit/.config/caddy/ssl/kepler.lan.crt /home/ankit/.config/caddy/ssl/kepler.lan.key {
		ca_root /home/ankit/.config/caddy/ssl/root-ca.crt
	}

    reverse_proxy https://localhost:31001 {
        transport http {
            tls_insecure_skip_verify
        }
    }
}

